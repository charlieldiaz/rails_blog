<!-- Main -->
  <div id="main">

    <!--  Post -->
      <section class="post">
        <%= form_for @post, url: {action: "create"}, html: {class: "nifty_form"} do %>
        <div class="field">
          <label name="post[title]">Title</label>
          <input type="text" name="post[title]">
        </div>

        <div class="field">
          <label name="post[featured]">Featured</label>
          <select name="post[featured]">
            <option value="1">Active</option>
            <option value="0">Inactive</option>
          </select>
        </div>

        <div class="field">
          <label name="post[img_url]">Img Url</label>
          <input type="text" name="post[img_url]">
        </div class="">

        <div class="field">
          <label name="post[slug]">Slug</label>
          <input type="text" name="post[slug]">
        </div>

        <div class="field">
          <label name="post[content]">Content</label>
          <textarea type="text" name="post[content]"></textarea>
        </div>

        <div class="field">
          <button type="submit">Save</button>
        </div>

        <% end %>
      </section>
  </div>
